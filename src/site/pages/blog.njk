---
permalink: blog/index.html
layout: default
metaTitle: Articles
metaDescription: Full-stack developer from Lisbon, Portugal.
---

{% block content %}

<h1 class="with-separator">Articles</h1>

<div>
{% for post in collections.post | reverse %}
  {% if loop.first %}<ul class="article-listing">{% endif %}
  <li>
    <article>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
      <p class="article-date"><time datetime="{{ post.date | dateDisplay }}">{{ post.date|dateDisplay }}</time></p>
    </article>
  </li>
  {% if loop.last %}</ul>{% endif %}
{% endfor %}
</div>

{% endblock %}